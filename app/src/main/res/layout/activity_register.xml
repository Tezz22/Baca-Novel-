<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121C2D"
    android:padding="24dp">

    <!-- TITLE -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="#3B82F6"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- CARD REGISTER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:background="@drawable/bg_glass_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- USERNAME -->
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input_dark"
                android:hint="Username"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#9CA3AF"
                android:inputType="textPersonName" />

            <!-- EMAIL -->
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_input_dark"
                android:hint="Email"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#9CA3AF"
                android:inputType="textEmailAddress" />

            <!-- PASSWORD -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:endIconMode="password_toggle"
                app:endIconTint="#9CA3AF"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Password"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#9CA3AF"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_input_dark"
                    android:padding="14dp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <!-- CONFIRM PASSWORD -->
            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_input_dark"
                android:hint="Konfirmasi Password"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#9CA3AF"
                android:inputType="textPassword" />

            <!-- UMUR -->
            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_input_dark"
                android:hint="Umur"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#9CA3AF"
                android:inputType="number" />

            <!-- REGISTER BUTTON -->
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="22dp"
                android:text="Register"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_blue_glow"/>

            <ProgressBar
                android:id="@+id/progress_register"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:indeterminateTint="#3B82F6"
                android:layout_gravity="center"/>
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- LOGIN LINK -->
    <TextView
        android:id="@+id/tv_login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login"
        android:textColor="#3B82F6"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
