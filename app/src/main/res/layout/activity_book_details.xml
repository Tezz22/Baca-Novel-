<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#121C2D"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:src="@drawable/cover1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtJudul"
                android:text="Judul Buku"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/txtAuthor"
                android:text="Author:"
                android:layout_marginTop="4dp"
                android:textColor="#B0BEC5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/txtTahun"
                android:text="Tahun terbit:"
                android:textColor="#B0BEC5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/txtPenerbit"
                android:text="Penerbit:"
                android:textColor="#B0BEC5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/txtTipe"
                android:text="Tipe:"
                android:textColor="#B0BEC5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutGenre"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Romance"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:background="@drawable/cyclinder_bg"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Fantasi"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:background="@drawable/cyclinder_bg"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnBaca"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:backgroundTint="#3B82F6"
            android:text="BACA"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_button_round"
            android:src="@drawable/ic_favorite"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_button_round"
            android:src="@drawable/share"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtSinopsis"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="Lorem ipsum dolor sit amet..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtSerupa"
        android:text="Serupa Lainnya"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRekomendasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>