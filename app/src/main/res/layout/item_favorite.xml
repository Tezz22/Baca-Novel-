<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#2B2B3D"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_fav_cover"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:background="#FF3838"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fav_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul Favorite"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_fav_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Author"
                    android:textColor="#E0E0E0" />

                <TextView
                    android:id="@+id/tv_updated_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Nov 2025 Diperbarui"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#E0E0E0"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_favorite_remove"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_button_round"
                android:padding="10dp"
                android:src="@drawable/ic_favorite_filled"
                android:contentDescription="Remove Favorite"
                app:tint="@android:color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>